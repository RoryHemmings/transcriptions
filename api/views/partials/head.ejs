<script>

  function reroute(link) {
    window.location = link;
  }

  function updateURLParameter(url, param, paramVal) {
    const temp = url.split("?");
    const base = temp[0];
    const originalArgs = temp[1];

    let updatedArgs = "";
    let args = [];

    if (originalArgs) {
      args = originalArgs.split("&");
      for (let i = 0; i < args.length; i++) {
        let argument = args[i].split('=');
        if (argument[0] != param) {
          updatedArgs += args[i];
        }
      }
    }

    updatedArgs += `&${param}=${paramVal}`;

    return base + "?" + updatedArgs;
  }

</script>